    "commit-push": "npm run commit && npm run push",
    "auto-commit": "bash scripts/commit-hook.sh",
    "status": "git status",
    "check-changes": "git diff --name-only",
    "frequent-commit": "echo 'ðŸš€ Committing and pushing every 2 hours...' && watch -n 7200 'npm run commit-push'"
